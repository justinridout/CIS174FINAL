@{
    ViewData["Title"] = "Home Page";
}

    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/banner1.jpg" alt="GymPic1" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Create a new Workout
                        <a asp-area="" asp-controller="Workout" asp-action="Create" class="btn btn-default">
                            Create Workout
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner2.jpg" alt="GymPic2" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Set a new Goal
                        <a asp-area="" asp-controller="Goals" asp-action="Index" class="btn btn-default">
                            Set Goal
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner3.jpg" height="50%" width="100%" alt="GymPic3" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        See past Workouts and Goals
                        <a asp-area="" asp-controller="Workout" asp-action="Index" class="btn btn-default">
                            See Archives
                            </a>
</p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h2><a class="btn btn-default" asp-area="" asp-controller="Workout" asp-action="Create">New Workout</a></h2>
            <ul>
                <li>Create a new Workout</li>
                <li>Edit an existing Workout</li>
            </ul>
        </div>
        <div class="col-md-3">
            <h2 style="margin-left: 5% "><a class="btn btn-default" asp-area="" asp-controller="Goals" asp-action="Index">Goals</a></h2>
            <ul>
                <li>Create Goals</li>
                <li>Edit Goals</a></li>
            </ul>
        </div>

        <div class="col-md-3">
            <h2><a class="btn btn-default" asp-area="" asp-controller="Workout" asp-action="Index">Archives</a></h2>
            <ul>
                <li>See past Workouts</li>
                <li>See past Goals</li>
            </ul>
        </div>

        <div class="col-md-3">
            <h2><a class="btn btn-default" asp-area="" asp-controller="Workout" asp-action="GlobalWorkouts">Global Workouts</a></h2>
            <ul>
                <li>View Workouts of Other Users</li>
                <li>See How You Stack Up</li>
            </ul>
        </div>
    </div>